{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/code"
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/code"
            }
        },
        {
            "label": "Flash",
            "type": "shell",
            "command": "make flash",
            "problemMatcher": [
                "$gcc"
            ],
            "options": {
                "cwd": "${workspaceRoot}/code"
            }
        }
    ]
}